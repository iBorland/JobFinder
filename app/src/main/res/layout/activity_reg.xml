<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/Lay">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/BtnNext">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Linnnn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourName"
                android:id="@+id/textView8"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowName"
                android:hint="@string/yourNamess"
                android:layout_marginLeft="16dp"
                android:maxLength="32"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourSurname"
                android:id="@+id/textView9"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowSurname"
                android:layout_marginLeft="16dp"
                android:hint="@string/yourSurname_hint"
                android:maxLines="1"
                android:maxLength="32"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourLogin"
                android:id="@+id/textView10"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowLogin"
                android:layout_marginLeft="16dp"
                android:hint="@string/yourLogin_hint"
                android:maxLength="32"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourPassword"
                android:id="@+id/textView11"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowPassword"
                android:layout_marginLeft="16dp"
                android:hint="@string/yourPassword_hint"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="32"
                android:singleLine="true"
                android:inputType="numberPassword|textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourAge"
                android:id="@+id/textView12"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/rowAge"
                android:layout_marginLeft="16dp"
                android:hint="@string/yourAge_hint"
                android:lines="1"
                android:maxLength="32"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/yourCity"
                android:id="@+id/textView13"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/select_city"
                android:id="@+id/rowCity"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:paddingRight="36dp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/BtnNext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/buttonbackground" />

</RelativeLayout>