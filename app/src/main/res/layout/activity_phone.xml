<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/RelInPhone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/accept_phone"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/phone_text"
        android:id="@+id/phoneText"
        android:textSize="14sp"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/rowNumber"
        android:layout_marginTop="24dp"
        android:hint="@string/_7951_111_11_11"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/phoneText"
        android:layout_alignStart="@+id/textView7"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/phone_accept"
        android:id="@+id/anyText"
        android:layout_marginTop="35dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_below="@+id/rowNumber"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@android:drawable/ic_menu_send"
        android:layout_alignTop="@+id/rowNumber"
        android:layout_alignBottom="@+id/rowNumber"
        android:layout_alignEnd="@+id/textView7"
        android:layout_toEndOf="@+id/rowNumber"
        android:contentDescription="@string/nexty" />

</RelativeLayout>